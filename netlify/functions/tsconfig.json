{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022", 
    "moduleResolution": "Bundler",
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "*.ts",
    "*.mts",
    "*.js",
    "*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}